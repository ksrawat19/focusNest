<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Projects – FocusNest</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2 class="mb-4">Your Projects</h2>

  <% if (projects.length === 0) { %>
    <p class="text-muted">You haven’t created any projects yet.</p>
    <a href="/projects/create" class="btn btn-primary">Create New Project</a>
  <% } else { %>
    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= project.name %></h5>
              <p class="card-text text-muted">
                <%= project.description.length > 60 ? project.description.slice(0, 60) + '...' : project.description %>
              </p>
              <a href="/projects/<%= project.id %>" class="btn btn-outline-primary btn-sm">View Project</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</body>
</html>
